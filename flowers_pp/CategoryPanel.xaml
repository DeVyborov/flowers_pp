<UserControl x:Class="flowers_pp.CategoryPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flowers_pp"
        mc:Ignorable="d"
        Height="330" Width="260">
    <Border Background="#FFC4C2A7" x:Name="back_main" CornerRadius="20" Margin="5">
        <Grid>
            <Border Background="#FFC8A360" x:Name="back_extra" CornerRadius="20" Margin="5"/>
            <Button  Style="{StaticResource visible_button}" Name="btn_basket" Click="btn_basket_Click" Cursor="Hand" Height="280" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center" MouseEnter="btn_basket_MouseEnter" MouseLeave="btn_basket_MouseLeave">
                <Grid>
                    <Image x:Name="photo_category" Source="/Assets/top-view-pink-flower-with-drops.jpg" Margin="5,0,5,90" Stretch="Fill"/>
                    <TextBlock x:Name="title_category" VerticalAlignment="Bottom" Background="Transparent" Text="Свежесрезанные цветы" FontFamily="Montserrat" FontSize="16" Foreground="Black" TextAlignment="Center"  Cursor="Hand"/>
                </Grid>
            </Button>
        </Grid>
    </Border>
</UserControl>
